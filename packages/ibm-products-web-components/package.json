{
  "name": "@carbon/ibm-products-web-components",
  "description": "Carbon for IBM Products Web Components",
  "version": "0.18.0",
  "license": "Apache-2.0",
  "main": "es/index.js",
  "module": "es/index.js",
  "type": "module",
  "bugs": "https://github.com/carbon-design-system/ibm-products/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/ibm-products.git",
    "directory": "packages/ibm-products-web-components"
  },
  "files": [
    "custom-elements.json",
    "es/**/*",
    "es-custom/**/*",
    "lib/**/*",
    "scss/**/*",
    "telemetry.yml"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "exports": {
    "./es/*": "./es/*",
    "./es-custom/*": "./es-custom/*",
    "./lib/*": "./lib/*",
    "./dist/*": "./dist/*",
    "./scss/*": "./scss/*",
    "./custom-elements.json": "./custom-elements.json",
    "./package.json": "./package.json",
    "./telemetry.yml": "./telemetry.yml"
  },
  "keywords": [
    "carbon",
    "carbon design system",
    "carbon community",
    "carbon for ibm products",
    "carbon for ibm products web components",
    "web components"
  ],
  "scripts": {
    "build": "yarn clean && node tasks/build.js && yarn wca",
    "build:storybook": "storybook build --quiet",
    "clean": "rimraf es lib scss dist storybook-static",
    "postinstall": "ibmtelemetry --config=telemetry.yml",
    "preview": "vite preview",
    "storybook": "storybook dev -p 3000",
    "test": "vitest run",
    "wca": "web-component-analyzer analyze src --outFile custom-elements.json",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@carbon/ibm-products-styles": "^2.65.0",
    "@carbon/styles": "1.82.0",
    "@carbon/web-components": "2.32.0",
    "@ibm/telemetry-js": "^1.9.1",
    "@lit/context": "^1.1.5",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@blockquote/rollup-plugin-externalize-source-dependencies": "^1.0.0",
    "@carbon/icon-helpers": "^10.59.0",
    "@carbon/icons": "^11.60.0",
    "@carbon/motion": "^11.28.0",
    "@mordech/vite-lit-loader": "^0.37.0",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-toolbars": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@storybook/web-components": "^8.6.12",
    "@storybook/web-components-vite": "^8.6.12",
    "@types/jest": "^29.5.13",
    "@vitest/browser": "^3.0.1",
    "@vitest/coverage-v8": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "c8": "^10.1.3",
    "cssnano": "^7.0.6",
    "eslint": "^9.14.0",
    "eslint-config-carbon": "^3.22.0",
    "globby": "^14.0.2",
    "happy-dom": "^17.0.0",
    "playwright": "^1.51.1",
    "postcss": "^8.4.47",
    "remark-gfm": "^4.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.3",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.80.6",
    "storybook": "^8.6.12",
    "storybook-addon-accessibility-checker": "^3.1.61-rc.3",
    "tslib": "^2.8.1",
    "typescript": "^5.5.3",
    "vite": "^6.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.1",
    "web-component-analyzer": "2.0.0"
  }
}
